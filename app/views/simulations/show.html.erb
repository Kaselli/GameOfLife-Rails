<div class="container mx-auto mt-5 text-center" 
     data-controller="simulation" 
     data-simulation-url-value="<%= advance_simulation_path(@simulation) %>">

  <div class="mb-4">
    <button data-action="click->simulation#toggle" 
            data-simulation-target="button"
            class="bg-green-600 text-white px-6 py-2 rounded font-bold hover:bg-green-700">
      Start Simulazione
    </button>
  </div>

  <%= turbo_frame_tag "game_board" do %>
    <%= render "grid", simulation: @simulation %>
  <% end %>

</div>