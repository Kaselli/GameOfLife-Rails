<div data-controller="simulation" data-simulation-url-value="<%= advance_simulation_path(@simulation) %>" style="text-align: center; padding: 40px;">
  
  <button data-action="click->simulation#toggle" 
          data-simulation-target="button"
          style="background-color: #28a745; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; font-weight: bold; margin-bottom: 20px;">
    Start Simulazione
  </button>

  <%= turbo_frame_tag "game_board" do %>
    <%= render "grid", simulation: @simulation %>
  <% end %>
  
</div>