<div class="max-w-md mx-auto mt-10">
  <h1 class="text-2xl mb-4">Carica Generazione Iniziale</h1>
  <%= form_with scope: :simulation, url: simulations_path, local: true, multipart: true do |f| %>
    <div class="mb-4">
      <%= f.label :file, "File di Input (.txt)", class: "block mb-2" %>
      <%= f.file_field :file, accept: 'text/plain', class: "border p-2 w-full", required: true %>
    </div>
    <%= f.submit "Carica e Avvia", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  <% end %>
</div>